<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBase" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorBackground</item>
    </style>
    <style name="BaseViews">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:padding">@dimen/paddingViews</item>
    </style>
    <style name="imagePartes" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:layout_margin">@dimen/paddingViews</item>
    </style>
    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/prueba</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="buttonTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/paddingvertical_menu_edittext</item>
        <item name="android:layout_marginBottom">@dimen/paddingvertical_menu_edittext</item>
        <item name="android:colorControlHighlight">@color/prueba</item>
    </style>

    <style name="TipografiaMenu" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textsize_menus</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_menu</item>
        <item name="android:maxHeight">75dp</item>
    </style>
    <style name="TipografiaPartes" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textsize_partes</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_menu</item>
    </style>
    <style name="iconAltavoz" parent="Theme.AppCompat.Light">
    </style>
    <style name="iconAltavoz_Alergias" parent="Theme.AppCompat.Light">
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="TextInputEditText_Datos" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_menu</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
    </style>


    <style name="TextInputEditText_dialog" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_menu</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
    </style>


    <style name="TextInputEditText_better" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_menu</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
    </style>


    <style name="MaterialBetterSpinner" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:paddingTop">@dimen/materialBetterSpinnner</item>
    </style>



    <style name="TextInputEditText_MultiLine" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_menu</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextInputEditText_MultiLine_abdomen" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/editText_textSize_datos</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_menu</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="ImageForms">
        <item name="android:layout_weight">.4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
