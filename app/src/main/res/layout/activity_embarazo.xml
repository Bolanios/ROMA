<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EmbarazoActivity">

    <include layout="@layout/actionbar_toolbar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/paddingViews">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/image_embarazo_desde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/iconoembarazo3"
                        style="@style/ImageForms"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_marginStart="@dimen/paddingViews">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_inicio_vida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_inicio_vida"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_inicio_vida"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_inicio_vida"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_embarazo_inicio_vida_hint"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false"
                                    android:maxLines="1" >
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_ultima_regla"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_ultima_regla"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_ultima_regla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_ultima_regla"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_embarazo_ultima_regla"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false"
                                    android:maxLines="1" >
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_otros_embarazos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_otros_embarazos"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_otros_embarazos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_otros_embarazos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_embarazo_otros_embarazos_hint"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false">
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_cuantos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_cuantos"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_embarazo_cuantos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_embarazo_cuantos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_embarazo_cuantos"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:inputType="number"
                                    android:maxLines="1" >
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_complicaciones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_complicaciones"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_complicaciones"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_complicaciones"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false"
                                    android:scrollHorizontally="true"
                                    android:hint="@string/preg_embarazo_complicaciones_hint"
                                    android:paddingLeft="@dimen/paddingViews" />
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_acido_folico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_embarazo_acido_folico"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_acido_folico"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_acido_folico"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_embarazo_acido_folico"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false"
                                    android:maxLines="1" >
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>acido_folico

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/paddingvertical_menu_edittext">
                            <ImageView
                                android:id="@+id/sound_embarazo_sintomas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icons8_altavoz_24"
                                android:onClick="sound"
                                android:theme="@style/iconAltavoz"
                                android:contentDescription="@string/preg_g3_sintomas"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_sintomas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextInputEditText_dialog">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_embarazo_sintomas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/paddingViews"
                                    android:hint="@string/preg_g3_sintomas"
                                    android:drawableRight="@drawable/icons8_flecha_ampliar_24"
                                    android:focusable="false">
                                </android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputEditText_MultiLine"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/notas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/notas"
                        android:inputType="textMultiLine"
                        android:minLines="5"
                        android:maxEms="10"
                        android:gravity="top|left"
                        android:scrollHorizontally="false"
                        android:background="@drawable/edittext_multiline"/>
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="@dimen/paddingvertical_menu"
                    android:onClick="onGuardar"
                    android:text="@string/guardar"
                    android:theme="@style/buttonTheme" />
            </LinearLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>


